    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Infinte Escape Velocity Backend",
            "cargo": {
                "args": [
                    "build",
                    "--bin=infinite-escape-velocity",
                    "--package=infinite-escape-velocity"
                ],
                "filter": {
                    "name": "infinite-escape-velocity",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release Infinte Escape Velocity Backend",
            "cargo": {
                "args": [
                    "build",
                    "--bin=infinite-escape-velocity",
                    "--package=infinite-escape-velocity",
                    "--release"
                ],
                "filter": {
                    "name": "infinite-escape-velocity",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Infinite Escape Velocity Frontend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/webapp",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "open"
            ],
        }
    ]
}