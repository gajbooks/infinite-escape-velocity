{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "presentation": {
                "hidden": true,
                "group": "Debug"
            },
            "name": "Launch Debug Infinite Escape Velocity Backend",
            "cargo": {
                "args": [
                    "build",
                    "--bin=infinite-escape-velocity",
                    "--package=infinite-escape-velocity",
                    "--frozen"
                ],
                "filter": {
                    "name": "infinite-escape-velocity",
                    "kind": "bin"
                }
            },
            "args": ["../infinite-escape-velocity-data/game_data", "--verify-assets", "--verbose-logs"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "presentation": {
                "hidden": true,
                "group": "Release"
            },
            "name": "Launch Release Infinite Escape Velocity Backend",
            "cargo": {
                "args": [
                    "build",
                    "--bin=infinite-escape-velocity",
                    "--package=infinite-escape-velocity",
                    "--release",
                    "--frozen"
                ],
                "filter": {
                    "name": "infinite-escape-velocity",
                    "kind": "bin"
                }
            },
            "args": ["../infinite-escape-velocity-data/game_data", "--webapp-directory", "webapp/dist/webapp"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Debug Infinite Escape Velocity Frontend",
            "presentation": {
                "hidden": true,
                "group": "Debug"
            },
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/webapp",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "ng", "--", "serve", "-o"
            ]
        },
        {
            "name": "Release Infinite Escape Velocity Frontend",
            "presentation": {
                "group": "Release"
            },
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/webapp",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "do-nothing"
            ],
            "preLaunchTask": "Open Release In Browser"
        }
    ],
    "compounds": [
        {
            "name": "Debug Infinite Escape Velocity Frontend",
            "configurations": ["Launch Debug Infinite Escape Velocity Frontend"],
            "presentation": {
                "group": "Debug"
            },
            "preLaunchTask": "Cargo Make Debug"
        },
        {
            "name": "Debug Infinite Escape Velocity Backend",
            "presentation": {
                "group": "Debug"
            },
            "configurations": ["Launch Debug Infinite Escape Velocity Backend"],
            "preLaunchTask": "Cargo Make Debug"
        },
        {   
            "name": "Debug Both Components",
            "presentation": {
                "group": "Debug"
            },
            "configurations": ["Launch Debug Infinite Escape Velocity Frontend", "Launch Debug Infinite Escape Velocity Backend"],
            "preLaunchTask": "Cargo Make Debug"
        },
        {
            "name": "Release Infinite Escape Velocity Backend",
            "presentation": {
                "group": "Release"
            },
            "configurations": ["Launch Release Infinite Escape Velocity Backend"],
            "preLaunchTask": "Cargo Make Release",
        },
        {
            "name": "Release Both Components",
            "presentation": {
                "group": "Release"
            },
            "configurations": ["Release Infinite Escape Velocity Frontend", "Launch Release Infinite Escape Velocity Backend"],
            "preLaunchTask": "Cargo Make Release",
        },
    ]
}
